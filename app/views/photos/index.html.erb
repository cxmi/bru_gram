<% @photos.each do |photo| %>
<% if photo.public == true || photo.user = current_user %>

<p><%= link_to photo.user.email, photo_path(photo) %><br>
<%= link_to image_tag(photo.image), photo_path(photo) %></p>
<p><%= photo.caption %></p>

<% if can_edit_photo?(photo) %>
<%= link_to "Edit", edit_photo_path(photo) %> | 
<%= link_to "Delete", photo_path(photo), 
	method: :delete,
	data: {confirm: "Are you sure?"} %>
<% end %> 



<% end %>
<% end %>


<br>
<%= link_to 'Back to Home', root_path %>


