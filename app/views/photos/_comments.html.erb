<h3>Comments</h3>
<% @photo.comments.each do |comment| %>
	<p>
	<b><%= comment.user.email %>:</b><br>
	<%= comment.body %></p>

<% if can_edit_comment?(comment) %>
	<%= link_to "Delete", [comment.photo, comment],
		method:  :delete,
		data: {confirm: "Are you sure?"} %> 
		<%= link_to "Edit", edit_photo_comment_path(@photo, comment) %>
<% end %>

<% end %>